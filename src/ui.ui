<?xml version='1.0' encoding='utf-8'?>
<interface version="1.1">
  <object class="tk.Frame" id="root">
    <property name="height">110</property>
    <property name="width">1100</property>
    <layout manager="grid">
      <property name="column">0</property>
      <property name="propagate">True</property>
      <property name="row">0</property>
    </layout>
    <child>
      <object class="tk.Button" id="startButton">
        <property name="command" type="command" cbtype="simple">onStartButtonClick</property>
        <property name="text" translatable="yes">Start</property>
        <layout manager="grid">
          <property name="column">0</property>
          <property name="ipadx">20</property>
          <property name="ipady">10</property>
          <property name="propagate">True</property>
          <property name="row">0</property>
          <property name="sticky">w</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="tk.Button" id="stopButton">
        <property name="command" type="command" cbtype="simple">onStopButtonClick</property>
        <property name="justify">left</property>
        <property name="relief">raised</property>
        <property name="text" translatable="yes">Stop</property>
        <layout manager="grid">
          <property name="column">0</property>
          <property name="ipadx">20</property>
          <property name="ipady">10</property>
          <property name="propagate">True</property>
          <property name="row">0</property>
          <property name="sticky">e</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="tk.Label" id="title">
        <property name="text" translatable="yes">Hue Sync
by Tim Trayler</property>
        <layout manager="grid">
          <property name="column">0</property>
          <property name="propagate">True</property>
          <property name="row">0</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="tk.Canvas" id="colorPreview">
        <property name="height">40</property>
        <property name="width">300</property>
        <layout manager="grid">
          <property name="column">0</property>
          <property name="ipadx">80</property>
          <property name="ipady">10</property>
          <property name="propagate">True</property>
          <property name="row">1</property>
        </layout>
      </object>
    </child>
  </object>
</interface>
